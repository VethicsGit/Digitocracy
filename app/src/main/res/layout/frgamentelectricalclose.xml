<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"

    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:layout_marginBottom = "5dp"
    android:layout_marginTop = "5dp"
    android:background = "#ffffff"
    android:translationZ = "2dp"
    app:cardCornerRadius="8dp"
    app:cardElevation = "1dp">

    <LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:layout_margin = "10dp"
        android:orientation = "vertical">

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:orientation = "vertical">

            <TextView
                android:id="@+id/poll_close_title"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:text = "Robert S.Mueller lll's investigation of
foreign mony flowing into Washington will impact russian election?"
                android:textSize = "22dp" />

            <TextView
                android:id="@+id/poll_close_id"
                android:visibility="gone"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:textSize = "22dp" />
            <TextView
                android:id="@+id/poll_close_cateid"
                android:visibility="gone"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:textSize = "22dp" />

            <RelativeLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginTop = "20dp">

                <TextView
                    android:id = "@+id/poll_close_vote"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:text = "Votes : 1"
                    android:gravity="center_vertical"
                    android:textSize = "20dp" />

                <TextView
                    android:id = "@+id/poll_close_knoe_more"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_alignParentRight = "true"
                    android:background = "@drawable/textview"
                    android:gravity = "end"
                    android:padding = "5dp"
                    android:textSize="20dp"
                    android:text = "Know more"
                    android:textColor = "@color/skyblue" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>