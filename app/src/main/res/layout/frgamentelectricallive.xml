<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"

    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="8dp"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:translationZ="2dp"
    android:layout_height="wrap_content">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/poll_live_title"
            android:layout_width="match_parent"
            android:textSize="22dp"
            android:layout_height="wrap_content"
            android:text="Did You Know?"/>

        <TextView
            android:id="@+id/poll_live_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Closed in 2 Day"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/poll_live_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            /> <TextView
            android:visibility="gone"
            android:id="@+id/poll_live_cateid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            />


        <RadioGroup
            android:id="@+id/poll_live_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <!-- <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:buttonTint="@color/skyblue"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:buttonTint="@color/skyblue"/>-->

        </RadioGroup>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/poll_live_total_vote"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Votes : 1"/>

            <TextView
                android:id="@+id/poll_live_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textview"
                android:text="Know more"
                android:padding="5dp"
                android:textSize="20dp"
                android:gravity="end"
                android:layout_alignParentRight="true"
                android:textColor="@color/skyblue"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>