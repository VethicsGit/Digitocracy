<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
android:id="@+id/debete_item_root_layout"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:layout_marginBottom = "5dp"
    android:layout_margin = "3dp"
    app:cardCornerRadius="4dp"
    app:cardMaxElevation="20dp"
    app:cardElevation = "1dp">



    <LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:background = "@drawable/textview"
        android:orientation = "vertical"
        >


        <RelativeLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content">
        <TextView
            android:id = "@+id/debates_title"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:gravity = "center"
            android:text = "name"
            android:textSize = "20dp"
            android:textStyle = "bold" />
            <TextView
                android:layout_alignParentRight="true"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:gravity = "center"
                android:text = "Live"
                android:textColor="#ffffff"
                android:paddingStart="10dp"
                android:background="@drawable/blue_round_corner"
                android:paddingEnd="10dp"
                android:textSize = "18dp"
                android:layout_marginRight="-01dp"
                android:layout_marginTop="-01dp"
                android:textStyle = "bold" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:gravity = "center"
            android:layout_marginTop = "10dp">

            <TextView
                android:id = "@+id/debates_date_time"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "DateTime" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/debates_layout_img"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_gravity = "center"
            android:layout_marginTop = "10dp"
            android:layout_marginBottom="10dp"
            android:orientation = "horizontal">

        <!--    <de.hdodenhof.circleimageview.CircleImageView
                android:id = "@+id/debates_profile1"
                android:layout_width = "match_parent"
                android:layout_height = "90dp"
                android:layout_weight = "1"
                android:padding = "5dp"
                android:src = "@drawable/tweety" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id = "@+id/debates_profile2"
                android:layout_width = "match_parent"
                android:layout_height = "90dp"
                android:layout_weight = "1"
                android:padding = "5dp"
                android:src = "@drawable/tweety" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id = "@+id/debates_profile3"
                android:layout_width = "match_parent"
                android:layout_height = "90dp"
                android:layout_weight = "1"
                android:padding = "5dp"
                android:src = "@drawable/tweety" />-->
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_gravity = "center"
            android:orientation = "horizontal">

            <TextView
                android:id = "@+id/debates_profilename1"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:gravity = "center"
                android:text = "sagar" />

            <TextView
                android:id = "@+id/debates_profilename2"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:gravity = "center"
                android:text = "mayur" />

            <TextView
                android:id = "@+id/debates_profilename3"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:gravity = "center"
                android:text = "kuldeep" />
        </LinearLayout>

        <Button
            android:id = "@+id/debates_join"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_gravity = "center"
            android:layout_marginTop = "10dp"
            android:background = "@drawable/blue_round_corner"
            android:text = "Join Now"
            android:layout_margin="10dp"
            android:textColor = "#ffffff" />

    </LinearLayout>


</android.support.v7.widget.CardView>
