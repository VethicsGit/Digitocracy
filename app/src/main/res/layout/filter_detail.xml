<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/categori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<RadioButton
    android:id="@+id/marketing"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:text="Digital Marketing"
    style="@style/Widget.AppCompat.CompoundButton.CheckBox"
    android:layout_alignParentStart="true"
    android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/marketing_tv"/>
    <View
        android:id="@+id/view1"
        android:layout_below="@id/marketing"
        android:layout_width="match_parent"
        android:background="#969696"
        android:layout_height="1dp"/>
    <RadioButton
        android:layout_below="@id/view1"
        android:id="@+id/business"
        android:text="Business"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/business_tv"/>
    <View
        android:id="@+id/view2"
        android:layout_below="@id/business"
        android:layout_width="match_parent"
        android:background="#969696"
        android:layout_height="1dp"/>

    <RadioButton
        android:layout_below="@id/view2"
        android:id="@+id/professional"
        android:text="Professional"
        android:backgroundTint="@color/skyblue"
        android:layout_marginTop="20dp"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/professional_tv"/>

    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/done"
        android:layout_margin="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
       android:background="@drawable/blue_round_corner"
        android:textColor="#ffffff"
        android:layout_gravity="bottom"/>

</RelativeLayout>