<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do You Have Fun at work?"/>
            <TextView
                android:id="@+id/gov_days1"
                android:layout_width="match_parent"
                android:text="Closed in 2 week"
                android:gravity="end"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/gov_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:buttonTint="@color/skyblue"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maybe"
                    android:buttonTint="@color/skyblue"/>

            </RadioGroup>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/gov_vote1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vote : 1"/>

            <TextView
                android:id="@+id/gov_more1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textview"
                android:text="Know more"
                android:layout_alignParentRight="true"
                android:gravity="end"
                android:textColor="@color/skyblue"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What Do You think?"/>

        <TextView
            android:id="@+id/gov_days2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Closed in 2 Week"/>

        <RadioGroup
            android:id="@+id/gov_group2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:buttonTint="@color/skyblue"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:buttonTint="@color/skyblue"/>

        </RadioGroup>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/gov_vote2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vote : 1"/>

            <TextView
                android:id="@+id/gov_more2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textview"
                android:layout_alignParentRight="true"
                android:text="Know more"
                android:gravity="end"
                android:textColor="@color/skyblue"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>