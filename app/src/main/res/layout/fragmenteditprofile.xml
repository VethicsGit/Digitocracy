<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/tweety"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NAME"/>
    <View
        android:layout_width="match_parent"
        android:background="#D4D4D4"
        android:layout_height="1dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editprofile_name"
        android:hint="name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GENDER"/>

    <View
        android:layout_width="match_parent"
        android:background="#D4D4D4"
        android:layout_height="1dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editprofile_gender"
        android:hint="gender"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editprofile_notification"
        android:text="NOTIFICATION"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receive notification"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Sbc"
            android:layout_gravity="center_vertical|end"/>
    </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D4D4D4"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="match_parent"
        style="@style/button"
        android:layout_gravity="center"
        android:text="Update"
        android:id="@+id/editprofile_upadte"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="#FFFFFF"
        android:layout_above="@id/editprofile_change_pw"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/editprofile_change_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        style="@style/button"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:textColor="#ffffff"/>
</RelativeLayout>
    </LinearLayout>



