<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/blog_detail_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/tweety"/>

    <TextView
        android:id="@+id/blog_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="title"
        />
    <TextView
        android:id="@+id/blog_detail_categori"
        android:text="categori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:gravity="center"
        />
    <TextView
        android:id="@+id/blog_detail_date"
        android:text="date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:gravity="center"/>
    <TextView
        android:id="@+id/blog_detailp_desc"
        android:text="desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        />

</LinearLayout>